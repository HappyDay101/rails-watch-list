<h2>Movies in <%= @list.name %></h2>
<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li><%= bookmark.movie.title %></li>
    <li><%= bookmark.movie.overview %></li>
    <%= link_to 'Remove', bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'text-danger ms-3' %>
  <% end %>
</ul>

<%= link_to 'Add Movie', new_list_bookmark_path(@list), class: 'btn btn-primary' %>
<%= link_to 'Back to lists', lists_path %>
