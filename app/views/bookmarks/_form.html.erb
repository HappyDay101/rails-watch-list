<%= simple_form_for [@list, @bookmark] do |f| %>
  <div class="mb-3">
    <%= f.association :movie, collection: Movie.all, label_method: :title, value_method: :id, include_blank: "Select a movie", input_html: { class: "form-control" } %>
  </div>

  <div class="mb-3">
    <%= f.input :comment, input_html: { class: "form-control", placeholder: "Enter your comment here" } %>
  </div>

  <div class="text-center">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
