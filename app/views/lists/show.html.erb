<h2>Movies in <%= @list.name %></h2>
<div class="row">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="<%= bookmark.movie.title %> Poster">
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <p class="card-text"><%= bookmark.movie.overview %></p>
          <%= link_to 'Remove', bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to 'Add Movie', new_list_bookmark_path(@list), class: 'btn btn-primary' %>
<%= link_to 'Back to lists', lists_path, class: 'btn btn-secondary' %>

<h2>Reviews</h2>
<div id="reviews">
  <%= render 'reviews/new', review: @list.reviews.build %>
  <% @list.reviews.each do |review| %>
    <p><strong><%= review.content %></strong></p>
  <% end %>
</div>
