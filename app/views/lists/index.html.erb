<!-- app/views/lists/index.html.erb -->
<h1>All Lists</h1>
<div class="row">
  <% @lists.each do |list| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= link_to list.name, list %></h5>
          <%= link_to 'Remove', list, method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<%= link_to 'New List', new_list_path, class: 'btn btn-success' %>
